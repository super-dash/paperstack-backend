{
    "name": "@super-dash/paperstack-api-server",
    "private": true,
    "version": "0.1.4",
    "description": "作业收集平台PaperStack的API服务器",
    "main": "lib/index.js",
    "repository": "https://github.com/super-dash/paperstack-api-server.git",
    "author": "github.com/super-dash",
    "license": "MIT",
    "scripts": {
        "clean": "rm -rf ./lib && rm -rf ./log",
        "lint": "eslint src --ext .ts",
        "lint:strict": "yarn lint --max-warnings 0",
        "lint:fix": "yarn lint --fix",
        "lint:watch": "esw src --ext .ts --color --fix --watch --changed --clear",
        "build": "tsc",
        "build:watch": "yarn build --watch",
        "start": "cross-env NODE_ENV=production node lib",
        "start:dev": "cross-env NODE_ENV=development ts-node src",
        "start:dev:watch": "cross-env NODE_ENV=development nodemon src/index.ts --watch src",
        "start:dev:online": "corss-env NODE_ENV=development:online ts-node src",
        "mocha": "cross-env NODE_ENV=development ts-mocha",
        "test": "cross-env NODE_ENV=development ts-mocha src/*.test.ts src/**/*.test.ts"
    },
    "devDependencies": {
        "@types/bcrypt": "^3",
        "@types/bluebird": "^3",
        "@types/chai": "^4.2.5",
        "@types/cors": "^2",
        "@types/express": "^4",
        "@types/fs-extra": "^8.0.1",
        "@types/js-yaml": "^3",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12",
        "@types/randomstring": "^1",
        "@types/validator": "^12.0.0",
        "@typescript-eslint/eslint-plugin": "^2",
        "@typescript-eslint/parser": "^2",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "eslint": "^6",
        "eslint-plugin-import": "^2",
        "eslint-watch": "^6.0.1",
        "mocha": "^6.2.2",
        "nodemon": "^2.0.1",
        "ts-mocha": "^6.0.0",
        "ts-node": "^8.5.2"
    },
    "dependencies": {
        "bcrypt": "3.0.6",
        "cors": "^2",
        "cross-env": "^6.0.3",
        "express": "^4",
        "fs-extra": "^8.1.0",
        "js-yaml": "^3",
        "pg": "^7",
        "pg-hstore": "^2",
        "randomstring": "^1.1.5",
        "reflect-metadata": "^0.1.13",
        "sqlite3": "^4.1.0",
        "typeorm": "^0.2.20",
        "typescript": "^3",
        "validator": "^12.0.0",
        "winston": "^3"
    }
}
